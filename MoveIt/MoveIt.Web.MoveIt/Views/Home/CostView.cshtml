@model MoveIt.Core.Data.Model.DTO.PriceLogicDTO

@{
    ViewBag.Title = "Price Breakdown";
}

<h2>Price Breakdown</h2>
<h4>Proposals are automatically saved and you can review them in your proposals manager!</h4>
<table class="table table-hover ">
    <tr id="trDistance" class="active">
        <td>
            @Html.DisplayFor(modelItem => Model.DistanceRule)
        </td>
        <td class="success">
            @Html.DisplayFor(modelItem => Model.DistanceCost)
        </td>
    </tr>
    <tr id="trVolume" class="active">
        <td>
            @Html.DisplayFor(modelItem => Model.VolumeRule)
        </td>
        <td class="success">
            @Html.DisplayFor(modelItem => Model.VolumeCost)
        </td>
    </tr>
    <tr id="trPiano" class="active">
        <td>
            @Html.DisplayFor(modelItem => Model.PianoRule)
        </td>
        <td class="success">
            @Html.DisplayFor(modelItem => Model.PianoCost)
        </td>
    </tr>
    <tr id="trTotalCost" class="success">
        <td id="dummy">Total Cost</td>
        <td class="success">@Html.DisplayFor(modelItem => Model.TotalCost)</td>
    </tr>
</table>
