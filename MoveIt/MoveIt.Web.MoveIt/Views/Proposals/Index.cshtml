@model IEnumerable<MoveIt.Core.Data.Model.DTO.ProposalDTO>

@{
    ViewBag.Title = "Proposals";
}

<h2>Proposals</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Volume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasPiano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(model => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProposalDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Distance)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Volume)
                </td>
                <td>
                    @Html.DisplayFor(model => item.HasPiano)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Accept", "Accept", new { id = item.ID })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }

</table>


